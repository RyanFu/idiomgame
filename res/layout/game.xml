<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/game_background" >

        <RelativeLayout
            android:id="@+id/game_player_one_layout"
            android:layout_width="90dip"
            android:layout_height="110dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/player_area_background" >

            <LinearLayout
                android:layout_width="80dip"
                android:layout_height="100dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/game_player_one_title"
                    android:layout_width="fill_parent"
                    android:layout_height="20dip"
                    android:background="@drawable/game_player_list_background"
                    android:gravity="center"
                    android:text="@string/game_player_one" />

                <ImageButton
                    android:id="@+id/game_player_one_header_image"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/game_player_space_header_image" />

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal" >

                    <TableRow
                        android:id="@+id/game_player_one_name_row"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal" >

                        <TextView
                            android:id="@+id/game_player_one_name_text"
                            android:layout_width="40dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10dip"
                            android:text="玩家:"
                            android:textColor="@android:color/black"
                            android:textSize="12dip" />

                        <TextView
                            android:id="@+id/game_player_one_name"
                            android:layout_width="40dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="3dip"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="12dip" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/game_player_one_score_row"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/game_player_one_score_text"
                            android:layout_width="40dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10dip"
                            android:text="积分:"
                            android:textColor="@android:color/black"
                            android:textSize="12dip" />

                        <TextView
                            android:id="@+id/game_player_one_score"
                            android:layout_width="40dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="3dip"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="12dip" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/game_idiom_show_area"
            android:layout_width="280dip"
            android:layout_height="60dip"
            android:layout_below="@+id/game_player_one_layout"
            android:layout_centerHorizontal="true" >

            <RelativeLayout
                android:id="@+id/game_idiom_text"
                android:layout_width="180dip"
                android:layout_height="55dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/game_show_background" >

                <TextView
                    android:id="@+id/game_idiom_show_text"
                    android:layout_width="180dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="头脑风暴"
                    android:textColor="@android:color/black"
                    android:textSize="30dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/game_idiom_check_image_layout"
                android:layout_width="100dip"
                android:layout_height="55dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/game_idiom_text" >

                <ImageView
                    android:id="@+id/game_idiom_check_image"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:gravity="center" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/game_player_two_and_three_layout"
            android:layout_width="fill_parent"
            android:layout_height="120dip"
            android:layout_below="@+id/game_idiom_show_area"
            android:layout_centerHorizontal="true" >

            <RelativeLayout
                android:id="@+id/game_player_two_and_three_area"
                android:layout_width="fill_parent"
                android:layout_height="110dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true" >

                <RelativeLayout
                    android:id="@+id/game_player_two_layout"
                    android:layout_width="90dip"
                    android:layout_height="110dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/player_area_background" >

                    <LinearLayout
                        android:layout_width="80dip"
                        android:layout_height="100dip"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/game_player_two_title"
                            android:layout_width="fill_parent"
                            android:layout_height="20dip"
                            android:background="@drawable/game_player_list_background"
                            android:gravity="center"
                            android:text="@string/game_player_two" />

                        <ImageButton
                            android:id="@+id/game_player_two_header_image"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/game_player_space_header_image" />

                        <TableLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >

                            <TableRow
                                android:id="@+id/game_player_two_name_row"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/game_player_two_name_text"
                                    android:layout_width="40dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="10dip"
                                    android:text="玩家:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12dip" />

                                <TextView
                                    android:id="@+id/game_player_two_name"
                                    android:layout_width="40dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="3dip"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@android:color/black"
                                    android:textSize="12dip" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/game_player_two_score_row"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/game_player_two_score_text"
                                    android:layout_width="40dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="10dip"
                                    android:text="积分:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12dip" />

                                <TextView
                                    android:id="@+id/game_player_two_score"
                                    android:layout_width="40dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="3dip"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@android:color/black"
                                    android:textSize="12dip" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/game_clock"
                    android:layout_width="80dip"
                    android:layout_height="100dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/clock" />

                    <TextView
                        android:id="@+id/clock_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="40dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/game_player_three_layout"
                    android:layout_width="90dip"
                    android:layout_height="110dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/player_area_background" >

                    <LinearLayout
                        android:layout_width="80dip"
                        android:layout_height="100dip"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/game_player_three_title"
                            android:layout_width="fill_parent"
                            android:layout_height="20dip"
                            android:background="@drawable/game_player_list_background"
                            android:gravity="center"
                            android:text="@string/game_player_three" />

                        <ImageButton
                            android:id="@+id/game_player_three_header_image"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/game_player_space_header_image" />

                        <TableLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >

                            <TableRow
                                android:id="@+id/game_player_three_name_row"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/game_player_three_name_text"
                                    android:layout_width="40dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="10dip"
                                    android:text="玩家:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12dip" />

                                <TextView
                                    android:id="@+id/game_player_three_name"
                                    android:layout_width="40dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="3dip"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@android:color/black"
                                    android:textSize="12dip" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/game_player_three_score_row"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/game_player_three_score_text"
                                    android:layout_width="40dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="10dip"
                                    android:text="积分:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12dip" />

                                <TextView
                                    android:id="@+id/game_player_three_score"
                                    android:layout_width="40dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="3dip"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@android:color/black"
                                    android:textSize="12dip" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/game_idiom_write_area"
            android:layout_width="260dip"
            android:layout_height="70dip"
            android:layout_above="@+id/game_gridview"
            android:layout_centerHorizontal="true" >

            <RelativeLayout
                android:id="@+id/game_idiom_write_layout_out"
                android:layout_width="260dip"
                android:layout_height="60dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/game_write_background" >

                <RelativeLayout
                    android:id="@+id/game_idiom_write_layout_inner"
                    android:layout_width="240dip"
                    android:layout_height="40dip"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" >

                    <TextView
                        android:id="@+id/game_idiom_write_text"
                        android:layout_width="50dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/game_write_pen"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dip" />

                    <EditText
                        android:id="@+id/game_idiom_edit_text"
                        android:layout_width="150dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/game_idiom_write_text"
                        android:focusable="false"
                        android:gravity="center_vertical" >
                    </EditText>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <GridView
            android:id="@+id/game_gridview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gridview_background"
            android:gravity="center" />
    </RelativeLayout>

</LinearLayout>